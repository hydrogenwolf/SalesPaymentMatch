@model IEnumerable<SalesSite.Models.PaymentNaver>

@{
    ViewBag.Title = "Index";
}

<h2>스토어팜 정산</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.주문번호)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.상품주문번호)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.구분)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.상품명)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.구매자명)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.결제금액_정산완료일)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.결제금액)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.정산예정금액)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.주문번호)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.상품주문번호)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.구분)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.상품명)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.구매자명)
        </td>
        <td>
            @Convert.ToString(string.Format("{0:d}", item.결제금액_정산완료일))
        </td>
        <td>
            @Convert.ToDecimal(item.결제금액).ToString("N0")
        </td>
        <td>
            @Convert.ToDecimal(item.정산예정금액).ToString("N0")
        </td>
    </tr>
}

</table>
