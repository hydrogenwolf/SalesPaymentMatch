@model IEnumerable<SalesSite.Models.PaymentAuctionGmarket>

@{
    ViewBag.Title = "Index";
}

<h2>옥션지마켓 정산</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.아이디)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.주문번호)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.판매금액)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.구매자명)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.상품명)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.수량)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.주문옵션)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.송장번호)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.정산예정금액)
        </th>
        <th style="width:90px">
            @Html.DisplayNameFor(model => model.정산완료일)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.아이디)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.주문번호)
        </td>
        <td>
            @Convert.ToDecimal(item.판매금액).ToString("N0")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.구매자명)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.상품명)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.수량)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.주문옵션)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.송장번호)
        </td>
        <td>
            @Convert.ToDecimal(item.정산예정금액).ToString("N0")
        </td>
        <td>
            @Convert.ToString(string.Format("{0:d}", item.정산완료일))
        </td>
    </tr>
}

</table>
