@model IEnumerable<SalesSite.Models.Payment11st>

@{
    ViewBag.Title = "Index";
}

<h2>11번가 정산</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.주문번호)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.구매자명)
        </th>
        <th style="width:90px">
            @Html.DisplayNameFor(model => model.송금완료일)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.상품명)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.옵션명)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.수량)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.정산금액)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.판매금액합계)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.송장번호)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.주문번호)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.구매자명)
        </td>
        <td>
            @Convert.ToString(string.Format("{0:d}", item.송금완료일))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.상품명)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.옵션명)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.수량)
        </td>
        <td>
            @Convert.ToDecimal(item.정산금액).ToString("N0")
        </td>
        <td>
            @Convert.ToDecimal(item.판매금액합계).ToString("N0")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.송장번호)
        </td>
    </tr>
}

</table>
